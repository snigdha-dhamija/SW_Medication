    {{!--  --}}
    <div class="container">
        <section id="donate-form" class="donate-form">
            <img src="../images/donate.png" alt="donate" class="donate-img">
            <form action="/home/donate" method="post" class="needs-validation" novalidate>
                <div class="row row1">
                    <div class="col">
                        <div class="form-group">
                            <input type="text" class="form-control" id="fname" placeholder="First name"
                                name="fname" required>
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <input type="text" class="form-control" id="lname" placeholder="Last name"
                                name="lname" required>
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <input type="email" class="form-control" id="cemail" placeholder="Enter email-id"
                                name="cemail" required>
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <input type="tel" class="form-control" id="cphone" placeholder="Contact Number"
                                name="cphone" required>
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                </div>
                <!--  -->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <textarea class="form-control" id="caddress" placeholder="Enter Address" name="caddress"
                                required maxlength="70" rows="1"></textarea>
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                </div>
                <!--  -->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <input type="text" class="form-control" id="pname" placeholder="Enter Product Name"
                                name="pname" required>
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                </div>
                <!--  -->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label for="mfg">Manufacturing date : </label>
                            <input type="date" class="form-control" id="mfg" placeholder="Enter Manufacturing date"
                                name="mfg" required>
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="exp">Expiry date : </label>
                            <input type="date" class="form-control" id="exp" placeholder="Enter Expiry date" name="exp"
                                required>
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>

                </div>
                <!--  -->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <input type="number" class="form-control" id="price"
                                placeholder="Enter Price. For free enter 0" name="price" required
                                data-toggle="tooltip" title="If donate for free enter 0">
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <!-- <label for="qty">Qty : </label> -->
                            <input type="number" class="form-control" id="qty" placeholder="Quantity" name="qty"
                                required>
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                </div>
                <!--  -->
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <textarea class="form-control" id="pdesc" placeholder="Enter Additional information"
                                name="pdesc" required maxlength="200" rows="2"></textarea>
                            <div class="valid-feedback">Valid.</div>
                            <div class="invalid-feedback">Please fill out this field.</div>
                        </div>
                    </div>
                </div>
                <!--  -->
               <div class="row donate">
                <button type="submit" class="btn " id="myBtn">Donate</button>

               </div>

            </form>
        </section>

